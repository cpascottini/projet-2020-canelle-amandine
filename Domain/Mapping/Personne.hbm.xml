<?xml version="1.0" encoding="utf-8" ?>

<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="Domain" namespace="Domain">
  <class name="Personne" table="personne">
    <id name="Id" column="pers_id" type="int">
      <generator class="native">
      </generator>
    </id>
    <property name="Login" column="pers_login" />
    <property name="Mdp" column="pers_mdp" />
    <property name="Statut" column="pers_statut" />


    <bag name="Possessions" inverse="true" lazy="true">
      <key column="pers_id"/>
      <one-to-many class="BD"/>
    </bag>

    <bag name="Souhaits" inverse="true" lazy="true">
      <key column="pers_id"/>
      <one-to-many class="BD"/>
    </bag>

  </class>
</hibernate-mapping>